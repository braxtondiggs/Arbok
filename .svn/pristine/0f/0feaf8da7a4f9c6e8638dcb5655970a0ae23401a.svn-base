@font-face {
	font-family: 'Conv_Dosis-Regular';
	src: url('../font/Dosis-Regular.eot');
	src: local('â˜º'), url('../font/Dosis-Regular.woff') format('woff'), url('../font/Dosis-Regular.ttf') format('truetype'), url('../font/Dosis-Regular.svg') format('svg');
	font-weight: normal;
	font-style: normal;
}
ul {
    margin:0;
    padding:0;
    list-style: none;
}
a, a:hover {
    color: #333;
    text-decoration: none;
    cursor: default;
}
body {
    background-image: url('../img/bg.jpg');
    background-repeat: no-repeat;
    background-size: 100%;
    font-family: Conv_Dosis-Regular;
}
header {
    color:#fcecef;
    text-align: center;
    font-size:26px;
    padding:10px 0;
    margin: 0 -15px;
    background-color: rgba(0, 0, 0, 0.3);
}

.slide-modal{
    top: 0;
    display: none;
    z-index:100000;
    background:rgba(0,0,0,.8);
    height:100%;
    width:100%;
    position:absolute;}

.kurt{position:relative;
    margin:0 auto;
    margin-top:50%;
    width:150px;
    font-size:20px;
    background:#111;
    text-align:center;
    border-radius:10px;
    box-shadow: inset 0 0 50px #272727;
    border:1px solid #222;
    color:#999;
    font-family:thin;}

.kurt img, .kurt p{display:inline-block;
    vertical-align:middle;}
.kurt p {
    margin: 9px 0;
}
#active-song {
	position:absolute;
	left:0;
	top: calc(50% - 150px);
}
span.bg-area {
	background-color: rgba(0, 0, 0, 0.3);
	margin-bottom:10px;
	display:inline-block;
	padding:5px 15px;
}
.now-playing {
	color:#ff0076;
	font-size:22px;
}
.song-info .bg-area{
	color:#fcecef;
	padding-right:60px!important;
}
.song-info .song-artist {
	font-size:28px;
}
.song-info .song-title {
	font-size:22px;
}

#pick-song {
	background-color: #f5e9ed;
	text-align: center;
	text-transform: uppercase;
	position:absolute;
	bottom:50px;
	padding: 20px;
	right:5px;
	background-color: rgba(245, 233, 237, 0.7);
}

#pick-song:after {
	content:"";
	width: 0; 
	height: 0; 
	border-top:54px solid transparent;
	border-bottom:54px solid transparent; 
	border-right:20px solid rgba(245, 233, 237, 0.7);
	position: absolute;
	left: -20px;
	top: 0;
}
#pick-song .first {
	font-size: 16px;
}
#pick-song .last-video {
	font-size: 32px;
	font-weight: bold;
}
#pick-song > div > span {
	padding-bottom:4px;
	border-bottom: solid 1px #000;
}

#album-list{
    display:none;
    margin-top:30px;
    margin-left:10px;
}

#albums {
    margin:auto;
}
#albums li {
    width:130px;
    height: 178px;
    float: left;
}
#albums li h3, #albums li p{ 
    margin: 0;
    text-overflow: ellipsis;
    white-space: nowrap;
    width: 130px;
    overflow: hidden;
}
#albums li h3 {
    margin-top:5px;
    font-size: 19px;
}
#albums li p {
    font-size: 15px;
    color:#666;
}
#thumbs {
    position: absolute;
    right: 5px;
    top: 85px;
}
#thumbs a{
    position: relative;
    display:inline-block;
    width: 75px;
    height: 75px;
    background-image: url('../img/thumbs.png');
    background-repeat: no-repeat;
    background-size: 152px 104px;
}
#thumbs a span{
    position: absolute;
    top: -22px;
    right: 34px;
}
#thumbs #thumb-up {
    background-position:0px 0px;
    margin-right: 15px;
    color: #17ae23;
}
#thumbs #thumb-down {
    background-position: -75px -28px;
    color: #cc0000;
}